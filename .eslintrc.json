{
  "root": true,
  "plugins": [
    "html"
  ],
  "settings": {
    "html/html-extensions": [
      ".html",
      ".hbs"
    ]
  },
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.hbs"
      ],
      "parserOptions": {
        "project": [
          "tsconfig.json"
        ],
        "createDefaultProgram": true
      },
      "extends": [
        "plugin:import/recommended",
        // Airbnb
        "airbnb-typescript/base",
        // Prettier
        "plugin:prettier/recommended",
        "prettier"
      ],
      "rules": {
      }
    },
    {
      "files": [
        "*.html",
        "*.hbs"
      ],
      "extends": [
      ],
      "rules": {}
    }
  ]
}
